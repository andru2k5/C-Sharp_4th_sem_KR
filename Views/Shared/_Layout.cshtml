<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fishing Blog</title>
    <link rel="stylesheet" href="~/css/site.css" /> @* Підключаємо наш власний CSS *@
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fishing Blog</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Index">Статті</a>
                </li>
            </ul>

            @* Авторизаційне меню: Вхід/Реєстрація/Привітання *@
            <partial name="_LoginPartial" />
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; @DateTime.Now.Year - Fishing Blog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> @* Підключаємо наш власний JS *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
